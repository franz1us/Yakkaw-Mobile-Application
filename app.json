{
  "expo": {
    "name": "Yakkaw-Mobile-Application",
    "slug": "Yakkaw-Mobile-Application",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/yakkaw_icon.png",
    "resizeMode": "contain",
    "scheme": "myapp",
    "userInterfaceStyle": "light",  // เปลี่ยนจาก automatic เป็น light
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIUserInterfaceStyle": "Light"  // บังคับให้ iOS ใช้โหมดแสง
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/yakkaw_icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/yakkaw_icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
